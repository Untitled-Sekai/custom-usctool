{
  "compilerOptions": {
    "resolveJsonModule": true,
    "types": ["node", "jest"],
    "lib": ["es2018", "dom"],
    "target": "es2018",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "rootDir": "src",
    "paths": {
      "~/*": ["./src/*"]
    },
    "outDir": "./dist",
    "declaration": true
  },
  "exclude": ["src/__tests__/**/*", "src/bin/**/*"]
}
