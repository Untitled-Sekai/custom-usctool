{
  "compilerOptions": {
    "resolveJsonModule": true,
    "types": ["node", "jest"],
    "lib": ["es2018", "dom"],
    "target": "es2018",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "rootDir": "src",
    "module": "CommonJS",
    "outDir": "./dist",
    "declaration": true,
    "typeRoots": ["./node_modules/@types", "./src/@types"]
  },
  "exclude": ["src/__tests__/**/*", "src/bin/**/*", "dist/**/*"]
}
